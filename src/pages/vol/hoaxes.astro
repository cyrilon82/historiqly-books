<style>
  .volume-page {
    max-width: 900px;
  }

  .volume-header {
    margin-bottom: 2rem;
  }

  .badge {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .badge.available {
    background: rgba(93, 181, 133, 0.15);
    color: #5DB585;
  }

  .volume-header h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: 0.5rem;
    line-height: 1.1;
  }

  .volume-subtitle {
    color: #a8a8a8;
    font-size: 1.125rem;
  }

  .volume-intro {
    padding: 1.5rem;
    background: #111111;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    margin-bottom: 3rem;
  }

  .volume-intro p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #e0e0e0;
  }

  .cases-section h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .cases-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .case-card {
    padding: 1.5rem;
    background: #111111;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    transition: all 0.2s;
  }

  .case-card:hover {
    border-color: #5DB585;
    background: #161616;
  }

  .case-num {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background: #161616;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    color: #5DB585;
    margin-bottom: 0.75rem;
  }

  .case-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .case-card p {
    color: #a8a8a8;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .case-meta {
    display: flex;
    gap: 1.5rem;
    font-size: 0.875rem;
    color: #777;
  }

  .pricing-section {
    padding: 2rem;
    background: #111111;
    border: 1px solid #5DB585;
    border-radius: 16px;
  }

  .pricing-card {
    text-align: center;
  }

  .price {
    display: block;
    font-size: 3rem;
    font-weight: 800;
    color: #5DB585;
  }

  .price-note {
    display: block;
    color: #a8a8a8;
    margin-bottom: 1.5rem;
  }

  .features {
    list-style: none;
    text-align: left;
    max-width: 400px;
    margin: 0 auto 2rem;
  }

  .features li {
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    background: #5DB585;
    color: #0a0a0a;
    font-weight: 700;
    font-size: 1.125rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: #6FC494;
    transform: translateY(-2px);
  }
</style>
