<style>
  /* ===== IMPROVED TYPOGRAPHY & SPACING ===== */
  
  .hero {
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 6rem 1.5rem;
    background-color: var(--surface);
  }

  .hero-content {
    max-width: 900px;
  }

  .hero h1 {
    font-size: clamp(2.75rem, 8vw, 5rem);
    font-weight: 800;
    line-height: 1.05;
    margin: 2rem 0;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    color: var(--muted-foreground);
    margin-bottom: 3rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.8;
  }

  /* ===== IMPROVED SECTIONS ===== */
  
  .section {
    padding: 6rem 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .problem-solution {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
  }

  @media (max-width: 768px) {
    .problem-solution {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  .problem-solution h2 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .problem-solution p {
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .tagline {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary);
    margin-top: 2rem;
  }

  /* ===== SECTION HEADINGS ===== */
  
  .how-it-works h2,
  .what-you-get h2,
  .pricing h2,
  .faq h2,
  .final-cta h2 {
    text-align: center;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    margin-bottom: 0.75rem;
    letter-spacing: -0.01em;
  }

  .section-subtitle {
    text-align: center;
    margin-bottom: 4rem;
    font-size: 1.125rem;
  }

  /* ===== IMPROVED CARDS ===== */
  
  .card {
    background-color: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-l);
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .card:hover {
    border-color: var(--primary);
    background-color: var(--surface-elevated);
    transform: translateY(-2px);
  }

  /* ===== STEPS (Evidence Engine) ===== */
  
  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .steps {
      grid-template-columns: 1fr;
    }
  }

  .step {
    text-align: center;
    padding: 2.5rem 2rem;
  }

  .step-number {
    width: 56px;
    height: 56px;
    background: var(--surface-elevated);
    border: 2px solid var(--border-strong);
    color: var(--primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.5rem;
    margin: 0 auto 1.5rem;
    transition: all 0.3s ease;
  }

  .step:hover .step-number {
    border-color: var(--primary);
    background-color: var(--primary-dim);
  }

  .step h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
  }

  .step p {
    font-size: 1rem;
    line-height: 1.7;
  }

  /* ===== FEATURES (What's Inside) ===== */
  
  .features {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 900px) {
    .features {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 500px) {
    .features {
      grid-template-columns: 1fr;
    }
  }

  .feature {
    text-align: center;
    padding: 2rem 1.5rem;
  }

  .feature-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: 1rem;
  }

  .feature h4 {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .feature p {
    font-size: 0.9375rem;
  }

  /* ===== PRICING CARDS ===== */
  
  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .pricing-cards {
      grid-template-columns: 1fr;
    }
  }

  .pricing-card {
    text-align: center;
    padding: 3rem 2rem;
    position: relative;
  }

  .pricing-card.featured {
    border-color: var(--primary);
  }

  .pricing-card.best-value {
    border-color: var(--border-strong);
  }

  .best-value-badge {
    position: absolute;
    top: -14px;
    left: 50%;
    transform: translateX(-50%);
    padding: 0.5rem 1rem;
    background-color: var(--primary);
    color: var(--background);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-s);
  }

  .pricing-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 1rem 0 0.75rem;
  }

  .price {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    color: var(--primary);
    margin: 0.5rem 0;
  }

  .price-note {
    font-size: 1rem;
    font-weight: 500;
    color: var(--muted-foreground);
  }

  .collection-desc {
    margin-bottom: 2rem;
  }

  .features-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0 2rem;
    text-align: left;
  }

  .features-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
    font-size: 1rem;
  }

  .full-width {
    width: 100%;
    justify-content: center;
  }

  /* ===== IMPROVED BUTTONS ===== */
  
  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    background-color: var(--primary);
    color: var(--background);
    font-weight: 700;
    font-size: 1.125rem;
    border-radius: var(--radius-m);
    transition: all 0.25s ease;
    cursor: pointer;
    border: none;
    box-shadow: 0 4px 14px rgba(93, 181, 133, 0.25);
  }

  .btn-primary:hover {
    background-color: var(--primary-hover);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(93, 181, 133, 0.35);
    color: var(--background);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    background-color: transparent;
    color: var(--primary);
    font-weight: 700;
    font-size: 1.125rem;
    border: 2px solid var(--primary);
    border-radius: var(--radius-m);
    transition: all 0.25s ease;
    cursor: pointer;
  }

  .btn-secondary:hover {
    background-color: var(--primary);
    color: var(--background);
    transform: translateY(-3px);
  }

  /* ===== FAQ ===== */
  
  .faq-list {
    max-width: 750px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    padding: 1.25rem 1.5rem;
  }

  .faq-item summary {
    font-weight: 700;
    font-size: 1.125rem;
    cursor: pointer;
    padding: 0.5rem 0;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq-item summary::after {
    content: '+';
    font-size: 1.5rem;
    color: var(--primary);
    transition: transform 0.3s ease;
  }

  .faq-item[open] summary::after {
    transform: rotate(45deg);
  }

  .faq-item p {
    color: var(--muted-foreground);
    padding-top: 1rem;
    line-height: 1.8;
  }

  /* ===== FINAL CTA ===== */
  
  .final-cta {
    background: var(--surface);
    border-radius: var(--radius-l);
    margin: 2rem auto;
    max-width: 900px;
  }

  .final-cta-content {
    text-align: center;
    padding: 4rem 2rem;
  }

  .final-cta p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }

  /* ===== FOOTER ===== */
  
  .footer {
    text-align: center;
    padding: 4rem 1.5rem;
    border-top: 1px solid var(--border);
  }

  .footer p {
    margin: 0.5rem 0;
  }

  /* ===== UTILITIES ===== */
  
  .text-muted {
    color: var(--muted-foreground);
  }

  .text-primary {
    color: var(--primary);
  }

  .badge {
    display: inline-block;
    padding: 0.375rem 1rem;
    background-color: var(--primary-dim);
    color: var(--primary);
    border-radius: var(--radius-s);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
