---
import SidebarLayout from '../layouts/SidebarLayout.astro';
---

<SidebarLayout title="Historiqly AI Casefiles">
  <style>
    :root {
      --bg-color: #0a0a0a;
      --text-color: #e0e0e0;
      --accent-color: #5DB585;
      --border-color: #2a2a2a;
      --card-bg: #141414;
    }
    
    h1, h2, h3 {
      color: white;
      font-weight: 700;
    }
    p {
      line-height: 1.6;
      color: #a0a0a0;
    }

    .text-center { text-align: center; }
    .text-accent { color: var(--accent-color); }
    .section-spacer { margin-top: 4rem; margin-bottom: 4rem; }
    .subtle-rule {
      border: none;
      height: 1px;
      background-color: var(--border-color);
      margin: 4rem auto;
      width: 100%;
    }

    .hero {
      padding: 4rem 0;
      text-align: center;
    }
    .hero .tag {
      display: inline-block;
      background-color: rgba(93, 181, 133, 0.1);
      color: var(--accent-color);
      padding: 0.3rem 0.8rem;
      border-radius: 99px;
      font-size: 0.8rem;
      font-weight: 600;
      margin-bottom: 1rem;
      border: 1px solid rgba(93, 181, 133, 0.2);
    }
    .hero h1 {
      font-size: 2.75rem;
      font-weight: 800;
      line-height: 1.1;
      margin: 0.5rem 0 1.5rem;
    }
    .hero p {
      max-width: 600px;
      margin: 0 auto 2rem;
      font-size: 1.05rem;
    }
    .cta-button {
      display: inline-block;
      background-color: var(--accent-color);
      color: #0a0a0a;
      font-weight: 700;
      font-size: 1rem;
      padding: 0.875rem 2rem;
      border-radius: 8px;
      text-decoration: none;
      transition: transform 0.2s ease;
    }
    .cta-button:hover {
      transform: scale(1.05);
    }
    .cta-button.secondary {
      background: transparent;
      border: 2px solid var(--accent-color);
      color: var(--accent-color);
      margin-left: 1rem;
    }

    .two-col-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: start;
    }
    .two-col-grid h3 {
      font-size: 1.25rem;
    }

    .section-header {
      text-align: center;
      max-width: 600px;
      margin: 0 auto 2.5rem;
    }
    .section-header h2 {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }
    .section-header p {
      font-size: 1rem;
    }

    .card-grid-3, .card-grid-4 {
      display: grid;
      gap: 1.25rem;
    }
    .card-grid-3 { grid-template-columns: repeat(3, 1fr); }
    .card-grid-4 { grid-template-columns: repeat(4, 1fr); }

    .unified-card {
      background-color: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 1.5rem;
      text-align: center;
      transition: all 0.2s ease;
    }
    .unified-card:hover {
      transform: translateY(-5px);
      border-color: var(--accent-color);
    }
    .card-icon {
      height: 36px;
      width: 36px;
      margin: 0 auto 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
    }
    .card-icon.numbered {
      background-color: var(--border-color);
      color: var(--text-color);
      font-weight: 700;
      font-size: 1.1rem;
    }
    .card-icon svg {
      width: 20px;
      height: 20px;
    }
    .unified-card h3 {
      font-size: 1.1rem;
      margin: 0 0 0.5rem;
    }
    .unified-card p {
      font-size: 0.9rem;
      margin: 0;
      color: #a0a0a0;
    }

    /* Free Preview Card */
    .free-preview {
      background: linear-gradient(135deg, rgba(93, 181, 133, 0.1) 0%, rgba(93, 181, 133, 0.02) 100%);
      border: 2px solid var(--accent-color);
      border-radius: 16px;
      padding: 2.5rem;
      text-align: center;
      margin-bottom: 2rem;
    }
    .free-preview .free-tag {
      display: inline-block;
      background: var(--accent-color);
      color: #0a0a0a;
      padding: 0.25rem 0.75rem;
      border-radius: 99px;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 1rem;
    }
    .free-preview h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }
    .free-preview p {
      margin-bottom: 1.5rem;
    }
    .free-preview .cases {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }
    .free-preview .case-tag {
      background: rgba(255,255,255,0.05);
      padding: 0.25rem 0.75rem;
      border-radius: 6px;
      font-size: 0.8rem;
      color: #b0b0b0;
    }

    .pricing-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      align-items: stretch;
    }
    .pricing-card {
      background-color: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      position: relative;
    }
    .pricing-card.highlight {
      border-color: var(--accent-color);
    }
    .pricing-tag {
      display: inline-block;
      background-color: rgba(93, 181, 133, 0.1);
      color: var(--accent-color);
      padding: 0.2rem 0.6rem;
      border-radius: 99px;
      font-size: 0.7rem;
      font-weight: 600;
      margin-bottom: 1rem;
      border: 1px solid rgba(93, 181, 133, 0.2);
      position: absolute;
      top: 1rem;
      right: 1rem;
    }
    .pricing-card h3 {
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
    }
    .price {
      font-size: 2.5rem;
      font-weight: 800;
      color: white;
      margin: 0.75rem 0;
    }
    .price span {
      font-size: 0.9rem;
      font-weight: 400;
      color: #a0a0a0;
      margin-left: 0.25rem;
    }
    .price-note {
      font-size: 0.85rem;
      color: #888;
      margin-top: -0.5rem;
      margin-bottom: 0.5rem;
    }
    .features-list {
      list-style: none;
      padding: 0;
      margin: 1rem 0;
      flex-grow: 1;
    }
    .features-list li {
      padding-left: 1.5rem;
      position: relative;
      margin-bottom: 0.5rem;
      color: #b0b0b0;
      font-size: 0.9rem;
    }
    .features-list li::before {
      content: '✓';
      position: absolute;
      left: 0;
      color: var(--accent-color);
      font-weight: 700;
    }
    .pricing-button {
      display: block;
      text-align: center;
      text-decoration: none;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.2s ease;
      width: 100%;
    }
    .pricing-button.primary {
      background-color: var(--accent-color);
      color: var(--bg-color);
    }
    .pricing-button.secondary {
      background-color: transparent;
      color: var(--accent-color);
      border: 1px solid var(--accent-color);
    }
    .pricing-button:hover {
      transform: scale(1.02);
    }

    .faq-item {
      border-bottom: 1px solid var(--border-color);
    }
    .faq-item summary {
      padding: 1.25rem 0;
      font-weight: 600;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: white;
      font-size: 1rem;
    }
    .faq-item summary::-webkit-details-marker {
      display: none;
    }
    .faq-item summary::after {
      content: '+';
      font-size: 1.5rem;
      font-weight: 400;
      transition: transform 0.2s;
    }
    .faq-item[open] summary::after {
      transform: rotate(45deg);
    }
    .faq-content {
      padding-bottom: 1.25rem;
    }

    .final-cta {
      background-color: var(--card-bg);
      border-radius: 12px;
      padding: 3rem 2rem;
      text-align: center;
    }
    .final-cta h2 {
      font-size: 1.75rem;
      margin-bottom: 0.5rem;
    }

    @media (max-width: 900px) {
      .card-grid-3, .card-grid-4, .pricing-grid {
        grid-template-columns: 1fr 1fr;
      }
    }
    @media (max-width: 768px) {
      .hero h1 { font-size: 2.2rem; }
      .two-col-grid { grid-template-columns: 1fr; gap: 2rem; }
      .cta-button.secondary { margin-left: 0; margin-top: 1rem; display: block; }
    }
    @media (max-width: 600px) {
      .hero h1 { font-size: 1.8rem; }
      .section-header h2 { font-size: 1.5rem; }
      .card-grid-3, .card-grid-4, .pricing-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <section class="hero">
