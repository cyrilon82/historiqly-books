<style>
  .hero {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 4rem 1.5rem;
    background: linear-gradient(180deg, var(--surface) 0%, var(--background) 100%);
  }

  .hero-content {
    max-width: 800px;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 1.5rem 0;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--muted-foreground);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .problem-solution {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  @media (max-width: 768px) {
    .problem-solution {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  .problem-solution h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--primary);
    margin-top: 1.5rem;
  }

  .how-it-works h2,
  .what-you-get h2,
  .pricing h2,
  .faq h2,
  .final-cta h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    text-align: center;
    margin-bottom: 3rem;
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .steps {
      grid-template-columns: 1fr;
    }
  }

  .step {
    text-align: center;
  }

  .step-number {
    width: 48px;
    height: 48px;
    background: var(--primary-dim);
    color: var(--primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    margin: 0 auto 1rem;
  }

  .step h3 {
    margin-bottom: 0.5rem;
  }

  .features {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .features {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .feature {
    text-align: center;
  }

  .feature-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 0.75rem;
  }

  .feature h4 {
    margin-bottom: 0.25rem;
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .pricing-cards {
      grid-template-columns: 1fr;
    }
  }

  .pricing-card {
    text-align: center;
  }

  .pricing-card.featured {
    border-color: var(--primary);
    position: relative;
  }

  .pricing-card h3 {
    margin: 1rem 0 0.5rem;
  }

  .price {
    font-size: 3rem;
    font-weight: 700;
    color: var(--primary);
    margin: 0.5rem 0;
  }

  .price-note {
    font-size: 1rem;
    font-weight: 400;
    color: var(--muted-foreground);
  }

  .features-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
    text-align: left;
  }

  .features-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border);
  }

  .faq-list {
    max-width: 700px;
    margin: 0 auto;
  }

  .faq-item {
    border-bottom: 1px solid var(--border);
    padding: 1rem 0;
  }

  .faq-item summary {
    font-weight: 600;
    cursor: pointer;
    padding: 0.5rem 0;
  }

  .faq-item p {
    color: var(--muted-foreground);
    padding-top: 0.5rem;
  }

  .final-cta {
    text-align: center;
    background: var(--surface);
    border-radius: var(--radius-l);
    margin: 2rem auto;
    max-width: 800px;
  }

  .footer {
    text-align: center;
    padding: 3rem 1.5rem;
    border-top: 1px solid var(--border);
  }

  .footer p {
    margin: 0.5rem 0;
  }
</style>
