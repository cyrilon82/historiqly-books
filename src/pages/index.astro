            padding: 2rem 0;
            font-size: 0.9rem;
            color: #777;
        }
        footer a {
            color: #999;
            text-decoration: none;
        }
        footer a:hover {
            color: var(--accent-color);
        }

        /* --- Responsive Design --- */
        @media (max-width: 900px) {
            .card-grid-3, .card-grid-4, .pricing-grid {
