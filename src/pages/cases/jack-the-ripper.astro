    --bg-dark: #0a0a0a;
    --bg-card: #111111;
    --bg-card-hover: #161616;
    --border-color: rgba(255, 255, 255, 0.08);
    --text-primary: #FAFAFA;
    --text-secondary: #A1A1AA;
    --accent: #EF4444;
    --accent-dim: rgba(239, 68, 68, 0.1);

    --font-serif: 'Cormorant Garamond', Georgia, serif;
    --font-sans: 'Inter', system-ui, sans-serif;
  }

  .case-file {
    background-color: var(--bg-dark);
    color: var(--text-primary);
    font-family: var(--font-sans);
    overflow-x: hidden;
  }

  /* UTILS */
  .text-accent { color: var(--accent); }

  /* HERO */
  .hero {
    position: relative;
    height: 90vh;
    min-height: 600px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid var(--border-color);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.4) grayscale(0.8) contrast(1.2);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, transparent 0%, var(--bg-dark) 90%);
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    padding: 0 1.5rem;
  }

  .case-meta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .meta-badge {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    padding: 0.4rem 0.8rem;
    border: 1px solid var(--border-color);
    background: rgba(0,0,0,0.5);
    backdrop-filter: blur(4px);
    color: var(--text-secondary);
  }

  .meta-badge.alert {
    border-color: var(--accent);
    color: var(--accent);
    background: var(--accent-dim);
  }

  .meta-badge.price {
    border-color: #F59E0B;
    background: rgba(245, 158, 11, 0.1);
    color: #F59E0B;
    font-weight: 800;
  }

  .hero-title {
    font-family: var(--font-serif);
    font-size: clamp(3.5rem, 8vw, 6rem);
    line-height: 0.9;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 1rem;
    text-shadow: 0 10px 30px rgba(0,0,0,0.7);
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 3vw, 1.5rem);
    color: var(--text-secondary);
    font-weight: 300;
    margin-bottom: 4rem;
    letter-spacing: 0.02em;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255,255,255,0.1);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
  }

  .stat-value {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 500;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    z-index: 10;
  }

  .scroll-indicator span {
    font-size: 0.65rem;
    letter-spacing: 0.3em;
    color: var(--text-secondary);
    opacity: 0.7;
  }

  .scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, var(--text-secondary) 0%, transparent 100%);
  }

  /* HERO ACTIONS */
  .hero-actions {
    margin-top: 3rem;
  }

  /* PRIMARY BUY BUTTON */
  .btn-buy-primary {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2.5rem;
    background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
    color: #000;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-family: var(--font-sans);
    transition: all 0.25s;
    box-shadow: 0 4px 24px rgba(245, 158, 11, 0.3), 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .btn-buy-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 32px rgba(245, 158, 11, 0.45), 0 4px 12px rgba(0, 0, 0, 0.3);
    background: linear-gradient(135deg, #FBBF24 0%, #F59E0B 100%);
  }

  .btn-buy-text {
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .btn-buy-price {
    font-size: 1.125rem;
    font-weight: 800;
    padding: 0.25rem 0.75rem;
