    text-decoration: none;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-family: var(--font-sans);
    transition: all 0.25s;
    box-shadow: 0 4px 24px rgba(93, 181, 133, 0.3), 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .btn-download-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 32px rgba(93, 181, 133, 0.45), 0 4px 12px rgba(0, 0, 0, 0.3);
    background: linear-gradient(135deg, #6FC494 0%, #5DB585 100%);
  }

  .cta-buy, .cta-download {
    width: 100%;
    justify-content: center;
  }

  /* INTRO */
  .intro-section {
    padding: 8rem 1.5rem;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .intro-text p {
    font-family: var(--font-serif);
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .intro-text strong {
    color: var(--text-primary);
    font-weight: 600;
  }

  /* BENTO GRID */
  .bento-section {
    padding: 2rem 1.5rem 8rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .bento-grid {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(2, minmax(200px, auto));
    }

    .large-card {
      grid-column: span 2;
      grid-row: span 2;
    }
  }

  .bento-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    padding: 2rem;
    border-radius: 4px;
    transition: transform 0.3s ease, border-color 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .bento-card:hover {
    transform: translateY(-2px);
    border-color: rgba(255,255,255,0.2);
    background: var(--bg-card-hover);
  }

  .card-label {
    display: block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .card-value {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 400;
    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .discovery-card .card-value { font-size: 5rem; font-weight: 700; }
  .check-card .card-value { font-size: 4rem; }

  .card-desc {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  /* EVIDENCE */
  .evidence-section {
    padding: 4rem 1.5rem;
    background: #0F0F0F;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    display: block;
    margin-bottom: 0.5rem;
  }

  .section-title {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 400;
  }

  .evidence-grid {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    gap: 4rem;
  }

  .evidence-card {
    display: grid;
    grid-template-columns: 1fr;
