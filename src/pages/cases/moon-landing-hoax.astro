    --bg-dark: #0a0a0a;
    --bg-card: #111111;
    --bg-card-hover: #161616;
    --border-color: rgba(255, 255, 255, 0.08);
    --text-primary: #FAFAFA;
    --text-secondary: #A1A1AA;
    --accent: #F59E0B;
    --accent-dim: rgba(245, 158, 11, 0.1);

    --font-serif: 'Cormorant Garamond', Georgia, serif;
    --font-sans: 'Inter', system-ui, sans-serif;
  }

  .case-file {
    background-color: var(--bg-dark);
    color: var(--text-primary);
    font-family: var(--font-sans);
    overflow-x: hidden;
  }

  /* UTILS */
  .text-accent { color: var(--accent); }

  /* HERO */
  .hero {
    position: relative;
    height: 90vh;
    min-height: 600px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid var(--border-color);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.4) grayscale(0.8) contrast(1.2);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, transparent 0%, var(--bg-dark) 90%);
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    padding: 0 1.5rem;
  }

  .case-meta {
    display: flex;
    gap: 1rem;
    justify-content: center;
