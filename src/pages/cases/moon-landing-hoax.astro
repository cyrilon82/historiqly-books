    margin: 0 auto;
    text-align: center;
  }

  .intro-text p {
    font-family: var(--font-serif);
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 2rem;
