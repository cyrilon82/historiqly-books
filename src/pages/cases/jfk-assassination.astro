    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.4) grayscale(0.8) contrast(1.2);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, transparent 0%, var(--bg-dark) 90%);
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    padding: 0 1.5rem;
  }

  .case-meta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .meta-badge {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    padding: 0.4rem 0.8rem;
    border: 1px solid var(--border-color);
    background: rgba(0,0,0,0.5);
    backdrop-filter: blur(4px);
    color: var(--text-secondary);
  }

  .meta-badge.alert {
    border-color: var(--accent);
    color: var(--accent);
    background: var(--accent-dim);
  }

