  .stat-value {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 500;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    z-index: 10;
  }

  .scroll-indicator span {
    font-size: 0.65rem;
    letter-spacing: 0.3em;
    color: var(--text-secondary);
    opacity: 0.7;
  }

  .scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, var(--text-secondary) 0%, transparent 100%);
  }

  /* HERO ACTIONS */
  .hero-actions {
    margin-top: 3rem;
  }

  .btn-buy-primary {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2.5rem;
    background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
    color: #000;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-family: var(--font-sans);
    transition: all 0.25s;
    box-shadow: 0 4px 24px rgba(245, 158, 11, 0.3), 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .btn-buy-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 32px rgba(245, 158, 11, 0.45), 0 4px 12px rgba(0, 0, 0, 0.3);
    background: linear-gradient(135deg, #FBBF24 0%, #F59E0B 100%);
