    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    padding: 0 1.5rem;
  }

  .case-meta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .meta-badge {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    padding: 0.4rem 0.8rem;
    border: 1px solid var(--border-color);
    background: rgba(0,0,0,0.5);
    backdrop-filter: blur(4px);
    color: var(--text-secondary);
  }

