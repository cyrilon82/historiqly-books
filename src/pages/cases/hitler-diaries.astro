    box-shadow: 0 4px 24px rgba(93, 181, 133, 0.3), 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .btn-download-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 32px rgba(93, 181, 133, 0.45), 0 4px 12px rgba(0, 0, 0, 0.3);
    background: linear-gradient(135deg, #6FC494 0%, #5DB585 100%);
  }

  .cta-buy, .cta-download {
    width: 100%;
    justify-content: center;
  }

  /* INTRO */
  .intro-section {
    padding: 8rem 1.5rem;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .intro-text p {
    font-family: var(--font-serif);
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .intro-text strong {
    color: var(--text-primary);
    font-weight: 600;
  }

  /* BENTO GRID */
  .bento-section {
    padding: 2rem 1.5rem 8rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .bento-grid {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(2, minmax(200px, auto));
    }

    .large-card {
      grid-column: span 2;
      grid-row: span 2;
    }
  }

  .bento-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    padding: 2rem;
    border-radius: 4px;
    transition: transform 0.3s ease, border-color 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .bento-card:hover {
    transform: translateY(-2px);
    border-color: rgba(255,255,255,0.2);
    background: var(--bg-card-hover);
  }

