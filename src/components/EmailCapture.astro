---
// Email Capture Component - Soft capture for notifications
interface Props {
  subscriberCount?: number;
}

const { subscriberCount = 0 } = Astro.props;
const showSocialProof = subscriberCount > 0;
---

<div class="email-capture">
  <div class="email-capture-glow"></div>
  <div class="email-capture-inner">
    <div class="capture-icon">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
        <polyline points="22,6 12,13 2,6"/>
      </svg>
    </div>

    <h3>New investigations drop weekly</h3>
    <p>Get them in your inbox before anyone else.</p>

    <form class="capture-form" id="emailCaptureForm">
      <input
        type="email"
        name="email"
        placeholder="your@email.com"
        required
        autocomplete="email"
        class="capture-input"
      />
      <button type="submit" class="capture-btn">
        <span class="btn-text">Notify Me</span>
        <span class="btn-loading" style="display: none;">
          <svg class="spinner" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" stroke-dasharray="60" stroke-dashoffset="20"/>
          </svg>
        </span>
      </button>
    </form>

    <div class="capture-success" id="captureSuccess" style="display: none;">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
        <polyline points="20 6 9 17 4 12"/>
      </svg>
      <span>You're on the list!</span>
    </div>

    {showSocialProof && (
      <p class="social-proof">
        <span class="proof-count">{subscriberCount.toLocaleString()}+</span> investigators already signed up
      </p>
    )}
  </div>
</div>

<script>
  const form = document.getElementById('emailCaptureForm') as HTMLFormElement;
  const successMsg = document.getElementById('captureSuccess');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const email = formData.get('email') as string;
    const btn = form.querySelector('.capture-btn') as HTMLButtonElement;
    const btnText = btn.querySelector('.btn-text') as HTMLElement;
    const btnLoading = btn.querySelector('.btn-loading') as HTMLElement;

    // Show loading state
    btn.disabled = true;
    btnText.style.display = 'none';
    btnLoading.style.display = 'flex';

    try {
      const apiBase = window.location.hostname === 'localhost'
        ? 'http://localhost:3000'
        : 'https://app.historiqly.com';

      await fetch(`${apiBase}/api/books/subscribe`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, source: 'sidebar' }),
      });

      // Show success
      form.style.display = 'none';
      if (successMsg) {
        successMsg.style.display = 'flex';
      }

    } catch (error) {
      // Still show success even if API fails â€” don't punish the user
      form.style.display = 'none';
      if (successMsg) {
        successMsg.style.display = 'flex';
      }
    }
  });
</script>

<style>
  .email-capture {
    padding: 2.5rem;
    background: linear-gradient(180deg, #131313 0%, #0f0f0f 100%);
    border: 1px solid rgba(93, 181, 133, 0.15);
    border-radius: 18px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .email-capture-glow {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    width: 300px;
    height: 200px;
    background: radial-gradient(ellipse, rgba(93, 181, 133, 0.06) 0%, transparent 70%);
    pointer-events: none;
  }

  .email-capture-inner {
    position: relative;
    z-index: 1;
  }

  .capture-icon {
    width: 52px;
    height: 52px;
    margin: 0 auto 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(93, 181, 133, 0.08);
    border: 1px solid rgba(93, 181, 133, 0.12);
    border-radius: 14px;
    color: #5DB585;
  }

  .capture-icon svg {
    width: 24px;
    height: 24px;
  }

  .email-capture h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.375rem;
  }

  .email-capture > .email-capture-inner > p {
    color: #777;
    font-size: 0.9375rem;
    margin-bottom: 1.5rem;
  }

  .capture-form {
    display: flex;
    gap: 0.5rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .capture-input {
    flex: 1;
    padding: 0.875rem 1rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 10px;
    color: #fff;
    font-size: 0.9375rem;
    font-family: inherit;
    transition: all 0.25s;
  }

  .capture-input::placeholder {
    color: #555;
  }

  .capture-input:focus {
    outline: none;
    border-color: rgba(93, 181, 133, 0.4);
    background: rgba(93, 181, 133, 0.04);
    box-shadow: 0 0 0 3px rgba(93, 181, 133, 0.08);
  }

  .capture-btn {
    padding: 0.875rem 1.5rem;
    background: #5DB585;
    color: #0a0a0a;
    font-weight: 700;
    font-size: 0.9375rem;
    font-family: inherit;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.25s;
    white-space: nowrap;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 110px;
    box-shadow: 0 0 15px rgba(93, 181, 133, 0.1);
  }

  .capture-btn:hover:not(:disabled) {
    background: #6FC494;
    transform: translateY(-1px);
    box-shadow: 0 0 25px rgba(93, 181, 133, 0.2);
  }

  .capture-btn:disabled {
    opacity: 0.8;
    cursor: not-allowed;
  }

  .btn-loading {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .spinner {
    width: 20px;
    height: 20px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .capture-success {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem;
    background: rgba(93, 181, 133, 0.08);
    border: 1px solid rgba(93, 181, 133, 0.2);
    border-radius: 10px;
    color: #5DB585;
    font-weight: 600;
    max-width: 400px;
    margin: 0 auto;
  }

  .capture-success svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .social-proof {
    margin-top: 1rem;
    font-size: 0.8125rem;
    color: #555;
  }

  .proof-count {
    color: #5DB585;
    font-weight: 600;
  }

  @media (max-width: 480px) {
    .email-capture {
      padding: 2rem 1.5rem;
    }

    .capture-form {
      flex-direction: column;
    }

    .capture-btn {
      width: 100%;
    }
  }
</style>
