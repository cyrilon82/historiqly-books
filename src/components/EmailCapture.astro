---
// Email Capture Component - Soft capture for notifications
interface Props {
  subscriberCount?: number;
}

const { subscriberCount = 0 } = Astro.props;
const showSocialProof = subscriberCount > 0;
---

<div class="email-capture">
  <div class="capture-icon">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
      <polyline points="22,6 12,13 2,6"/>
    </svg>
  </div>

  <h3>New investigations drop weekly</h3>
  <p>Get them in your inbox before anyone else.</p>

  <form class="capture-form" id="emailCaptureForm">
    <input
      type="email"
      name="email"
      placeholder="your@email.com"
      required
      autocomplete="email"
      class="capture-input"
    />
    <button type="submit" class="capture-btn">
      <span class="btn-text">Notify Me</span>
      <span class="btn-loading" style="display: none;">
        <svg class="spinner" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10" stroke-dasharray="60" stroke-dashoffset="20"/>
        </svg>
      </span>
    </button>
  </form>

  <div class="capture-success" id="captureSuccess" style="display: none;">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
      <polyline points="20 6 9 17 4 12"/>
    </svg>
    <span>You're on the list!</span>
  </div>

  {showSocialProof && (
    <p class="social-proof">
      <span class="proof-count">{subscriberCount.toLocaleString()}+</span> investigators already signed up
    </p>
  )}
</div>

<script>
  const form = document.getElementById('emailCaptureForm') as HTMLFormElement;
  const successMsg = document.getElementById('captureSuccess');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const email = formData.get('email') as string;
    const btn = form.querySelector('.capture-btn') as HTMLButtonElement;
    const btnText = btn.querySelector('.btn-text') as HTMLElement;
    const btnLoading = btn.querySelector('.btn-loading') as HTMLElement;

    // Show loading state
    btn.disabled = true;
    btnText.style.display = 'none';
    btnLoading.style.display = 'flex';

    try {
      // TODO: Replace with actual Lemon Squeezy API endpoint
      // const response = await fetch('https://api.lemonsqueezy.com/...', {
      //   method: 'POST',
      //   headers: { 'Content-Type': 'application/json' },
      //   body: JSON.stringify({ email })
      // });

      // Simulate API call for now
      await new Promise(resolve => setTimeout(resolve, 800));

      // Store in localStorage as backup
      const existingEmails = JSON.parse(localStorage.getItem('historiqly_emails') || '[]');
      if (!existingEmails.includes(email)) {
        existingEmails.push(email);
        localStorage.setItem('historiqly_emails', JSON.stringify(existingEmails));
      }

      // Show success
      form.style.display = 'none';
      if (successMsg) {
        successMsg.style.display = 'flex';
      }

    } catch (error) {
      console.error('Email capture failed:', error);
      // Reset button
      btn.disabled = false;
      btnText.style.display = 'inline';
      btnLoading.style.display = 'none';
    }
  });
</script>

<style>
  .email-capture {
    padding: 2rem;
    background: #111;
    border: 1px solid #1a1a1a;
    border-radius: 16px;
    text-align: center;
  }

  .capture-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(93, 181, 133, 0.1);
    border-radius: 12px;
    color: #5DB585;
  }

  .capture-icon svg {
    width: 24px;
    height: 24px;
  }

  .email-capture h3 {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .email-capture > p {
    color: #888;
    font-size: 0.9375rem;
    margin-bottom: 1.25rem;
  }

  .capture-form {
    display: flex;
    gap: 0.5rem;
    max-width: 380px;
    margin: 0 auto;
  }

  .capture-input {
    flex: 1;
    padding: 0.875rem 1rem;
    background: #1a1a1a;
    border: 1px solid #2a2a2a;
    border-radius: 8px;
    color: #fff;
    font-size: 0.9375rem;
    transition: border-color 0.2s;
  }

  .capture-input::placeholder {
    color: #555;
  }

  .capture-input:focus {
    outline: none;
    border-color: #5DB585;
  }

  .capture-btn {
    padding: 0.875rem 1.25rem;
    background: #5DB585;
    color: #0a0a0a;
    font-weight: 700;
    font-size: 0.9375rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
    white-space: nowrap;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 100px;
  }

  .capture-btn:hover:not(:disabled) {
    background: #6FC494;
    transform: translateY(-1px);
  }

  .capture-btn:disabled {
    opacity: 0.8;
    cursor: not-allowed;
  }

  .btn-loading {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .spinner {
    width: 20px;
    height: 20px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .capture-success {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem;
    background: rgba(93, 181, 133, 0.1);
    border: 1px solid rgba(93, 181, 133, 0.2);
    border-radius: 8px;
    color: #5DB585;
    font-weight: 600;
    max-width: 380px;
    margin: 0 auto;
  }

  .capture-success svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .social-proof {
    margin-top: 1rem;
    font-size: 0.8125rem;
    color: #666;
  }

  .proof-count {
    color: #5DB585;
    font-weight: 600;
  }

  @media (max-width: 480px) {
    .capture-form {
      flex-direction: column;
    }

    .capture-btn {
      width: 100%;
    }
  }
</style>
