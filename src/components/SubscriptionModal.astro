---
// Subscription Modal Component
---

<!-- Subscription Modal -->
<div class="modal-overlay" id="subscriptionModal">
  <div class="modal-content">
    <button class="modal-close" id="modalClose" aria-label="Close modal">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="modal-header">
      <h2>Choose Your Plan</h2>
      <p>You've got 3 free cases. Subscribe to unlock all 5 in Vol 1 — plus every future volume.</p>
    </div>

    <div class="modal-pricing">
      <label class="pricing-option">
        <input type="radio" name="plan" value="monthly" checked />
        <div class="option-content">
          <div class="option-header">
            <span class="option-name">Monthly</span>
            <span class="option-price">$4.99<span class="period">/mo</span></span>
          </div>
          <p class="option-desc">Full access, cancel anytime</p>
        </div>
      </label>

      <label class="pricing-option featured">
        <div class="save-badge">Save 35%</div>
        <input type="radio" name="plan" value="yearly" />
        <div class="option-content">
          <div class="option-header">
            <span class="option-name">Yearly</span>
            <span class="option-price">$39<span class="period">/yr</span></span>
          </div>
          <p class="option-desc">Best value • Early access • Bonus content</p>
        </div>
      </label>
    </div>

    <div class="modal-features">
      <div class="feature-row">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>Unlock all 5 cases in Vol 1: Hoaxes</span>
      </div>
      <div class="feature-row">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>Every future volume included</span>
      </div>
      <div class="feature-row">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>PDF + ePub downloads</span>
      </div>
    </div>

    <button class="subscribe-btn" id="subscribeBtn">
      Subscribe Now
    </button>

    <p class="modal-note">Secure checkout via LemonSqueezy</p>
  </div>
</div>

<script>
  const modal = document.getElementById('subscriptionModal');
  const closeBtn = document.getElementById('modalClose');
  const subscribeBtn = document.getElementById('subscribeBtn');
  const planInputs = document.querySelectorAll('input[name="plan"]');

  const urls = {
    monthly: 'https://historiqly.lemonsqueezy.com/subscribe/monthly',
    yearly: 'https://historiqly.lemonsqueezy.com/subscribe/yearly'
  };

  // Open modal
  function openSubscriptionModal() {
    modal?.classList.add('open');
    document.body.style.overflow = 'hidden';
  }

  // Close modal
  function closeSubscriptionModal() {
    modal?.classList.remove('open');
    document.body.style.overflow = '';
  }

  // Close button
  closeBtn?.addEventListener('click', closeSubscriptionModal);

  // Click outside to close
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      closeSubscriptionModal();
    }
  });

  // Escape key to close
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal?.classList.contains('open')) {
      closeSubscriptionModal();
    }
  });

  // Subscribe button
  subscribeBtn?.addEventListener('click', () => {
    const selectedPlan = document.querySelector('input[name="plan"]:checked') as HTMLInputElement;
    const url = urls[selectedPlan?.value as keyof typeof urls] || urls.monthly;
    window.open(url, '_blank');
  });

  // Expose function globally for other scripts to use
  (window as any).openSubscriptionModal = openSubscriptionModal;

  // Auto-attach to subscribe links/buttons with data-subscription attribute
  document.querySelectorAll('[data-subscription]').forEach(el => {
    el.addEventListener('click', (e) => {
      e.preventDefault();
      openSubscriptionModal();
    });
  });
</script>

<style>
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s, visibility 0.2s;
    padding: 1rem;
  }

  .modal-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    background: #111;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2rem;
    max-width: 420px;
    width: 100%;
    position: relative;
    transform: translateY(20px) scale(0.95);
    transition: transform 0.2s;
  }

  .modal-overlay.open .modal-content {
    transform: translateY(0) scale(1);
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    color: #666;
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 4px;
    transition: color 0.2s, background 0.2s;
  }

  .modal-close:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }

  .modal-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .modal-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .modal-header p {
    color: #888;
    font-size: 0.9375rem;
    margin: 0;
  }

  .modal-pricing {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .pricing-option {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    background: #1a1a1a;
    border: 2px solid #2a2a2a;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.2s;
    position: relative;
  }

  .pricing-option:hover {
    border-color: #3a3a3a;
  }

  .pricing-option:has(input:checked) {
    border-color: #5DB585;
    background: rgba(93, 181, 133, 0.05);
  }

  .pricing-option input {
    width: 18px;
    height: 18px;
    margin-top: 0.125rem;
    accent-color: #5DB585;
  }

  .pricing-option.featured {
    overflow: visible;
  }

  .save-badge {
    position: absolute;
    top: -0.5rem;
    right: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: #5DB585;
    color: #0a0a0a;
    font-size: 0.625rem;
    font-weight: 700;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .option-content {
    flex: 1;
  }

  .option-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.25rem;
  }

  .option-name {
    font-weight: 600;
    font-size: 1rem;
  }

  .option-price {
    font-weight: 700;
    font-size: 1.125rem;
  }

  .option-price .period {
    font-size: 0.8125rem;
    font-weight: 500;
    color: #888;
  }

  .option-desc {
    font-size: 0.8125rem;
    color: #888;
    margin: 0;
  }

  .modal-features {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: rgba(93, 181, 133, 0.05);
    border-radius: 8px;
  }

  .feature-row {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 0.875rem;
    color: #ccc;
  }

  .feature-row svg {
    color: #5DB585;
    flex-shrink: 0;
  }

  .subscribe-btn {
    width: 100%;
    padding: 1rem;
    background: #5DB585;
    color: #0a0a0a;
    font-weight: 700;
    font-size: 1rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
  }

  .subscribe-btn:hover {
    background: #6FC494;
    transform: translateY(-1px);
  }

  .modal-note {
    text-align: center;
    font-size: 0.75rem;
    color: #666;
    margin: 0.75rem 0 0;
  }

  @media (max-width: 480px) {
    .modal-content {
      padding: 1.5rem;
    }

    .modal-header h2 {
      font-size: 1.25rem;
    }

    .option-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>
