---

<div class="modal-overlay" id="freeBookModal">
  <div class="modal-content">
    <button class="modal-close" id="freeBookModalClose" aria-label="Close modal">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="modal-header">
      <div class="modal-cover">
        <img src="/books/covers/piltdown-man.jpg" alt="The Piltdown Men" width="120" height="180" />
      </div>
      <div class="modal-title">
        <span class="free-badge">
          <span class="badge-dot"></span>
          Free Book
        </span>
        <h2>The Piltdown Men</h2>
        <p>The 41-Year Fraud That Fooled Science</p>
      </div>
    </div>

    <div class="modal-stats">
      <div class="stat"><span class="stat-value">15</span><span class="stat-label">Chapters</span></div>
      <div class="stat-divider"></div>
      <div class="stat"><span class="stat-value">45 min</span><span class="stat-label">Read</span></div>
      <div class="stat-divider"></div>
      <div class="stat"><span class="stat-value">Free</span><span class="stat-label">DRM-free EPUB</span></div>
    </div>

    <!-- Email form state -->
    <div id="freeBookFormState">
      <form id="freeBookModalForm">
        <input
          type="email"
          name="email"
          placeholder="your@email.com"
          required
          autocomplete="email"
          class="form-input"
        />
        <button type="submit" class="form-btn">
          <span class="btn-text">Get Free Book</span>
          <span class="btn-loading" style="display: none;">
            <svg class="spinner" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10" stroke-dasharray="60" stroke-dashoffset="20"/>
            </svg>
          </span>
        </button>
      </form>
      <p class="form-note">Free. No payment needed. We'll also send you new releases.</p>
    </div>

    <!-- Download state -->
    <div id="freeBookDownloadState" style="display: none;">
      <a href="/books/piltdown-man.epub" class="download-btn" download="The-Piltdown-Men.epub">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
          <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4M7 10l5 5 5-5M12 15V3"/>
        </svg>
        Download Free EPUB
      </a>
      <p class="download-note">DRM-free. Reads on any device.</p>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('freeBookModal');
  const closeBtn = document.getElementById('freeBookModalClose');
  const formState = document.getElementById('freeBookFormState');
  const downloadState = document.getElementById('freeBookDownloadState');
  const form = document.getElementById('freeBookModalForm') as HTMLFormElement;

  function openFreeBookModal() {
    // Check if already claimed
    if (localStorage.getItem('historiqly_free_book_claimed') === 'true') {
      if (formState) formState.style.display = 'none';
      if (downloadState) downloadState.style.display = 'block';
    } else {
      if (formState) formState.style.display = 'block';
      if (downloadState) downloadState.style.display = 'none';
    }
    modal?.classList.add('open');
    document.body.style.overflow = 'hidden';
  }

  function closeFreeBookModal() {
    modal?.classList.remove('open');
    document.body.style.overflow = '';
  }

  // Close button
  closeBtn?.addEventListener('click', closeFreeBookModal);

  // Click outside
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) closeFreeBookModal();
  });

  // Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal?.classList.contains('open')) {
      closeFreeBookModal();
    }
  });

  // Form submit
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const email = formData.get('email') as string;
    const btn = form.querySelector('.form-btn') as HTMLButtonElement;
    const btnText = btn.querySelector('.btn-text') as HTMLElement;
    const btnLoading = btn.querySelector('.btn-loading') as HTMLElement;

    btn.disabled = true;
    btnText.style.display = 'none';
    btnLoading.style.display = 'flex';

    try {
      const apiBase = window.location.hostname === 'localhost'
        ? 'http://localhost:3000'
        : 'https://app.historiqly.com';

      await fetch(`${apiBase}/api/books/subscribe`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, source: 'free-book-modal' }),
      });

      localStorage.setItem('historiqly_free_book_claimed', 'true');
      if (formState) formState.style.display = 'none';
      if (downloadState) downloadState.style.display = 'block';
    } catch {
      // Still show download even if API fails
      localStorage.setItem('historiqly_free_book_claimed', 'true');
      if (formState) formState.style.display = 'none';
      if (downloadState) downloadState.style.display = 'block';
    }
  });

  // Expose globally
  (window as any).openFreeBookModal = openFreeBookModal;

  // Auto-attach to [data-free-book] elements
  document.querySelectorAll('[data-free-book]').forEach(el => {
    el.addEventListener('click', (e) => {
      e.preventDefault();
      openFreeBookModal();
    });
  });
</script>

<style>
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(6px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s, visibility 0.2s;
    padding: 1rem;
  }

  .modal-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    background: #111;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2.5rem;
    max-width: 480px;
    width: 100%;
    position: relative;
    transform: translateY(20px) scale(0.95);
    transition: transform 0.2s;
  }

  .modal-overlay.open .modal-content {
    transform: translateY(0) scale(1);
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    color: #666;
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 4px;
    transition: color 0.2s, background 0.2s;
    z-index: 1;
  }

  .modal-close:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Header with cover + title */
  .modal-header {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .modal-cover {
    flex-shrink: 0;
  }

  .modal-cover img {
    width: 100px;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
  }

  .modal-title {
    display: flex;
    flex-direction: column;
  }

  .free-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.25rem 0.65rem;
    background: rgba(93, 181, 133, 0.1);
    border: 1px solid rgba(93, 181, 133, 0.3);
    border-radius: 100px;
    font-size: 0.625rem;
    font-weight: 700;
    color: #5DB585;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
    width: fit-content;
  }

  .badge-dot {
    width: 5px;
    height: 5px;
    background: #5DB585;
    border-radius: 50%;
    box-shadow: 0 0 6px #5DB585;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .modal-title h2 {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    line-height: 1.1;
    margin-bottom: 0.25rem;
  }

  .modal-title p {
    color: #888;
    font-size: 0.875rem;
    font-style: italic;
    margin: 0;
  }

  /* Stats */
  .modal-stats {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 10px;
    margin-bottom: 1.5rem;
    justify-content: center;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.15rem;
  }

  .stat-value {
    font-size: 0.95rem;
    font-weight: 700;
    color: #fff;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.575rem;
    font-weight: 600;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 22px;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Form */
  form {
    display: flex;
    gap: 0.75rem;
    background: rgba(0, 0, 0, 0.3);
    padding: 0.5rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .form-input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: transparent;
    border: none;
    color: #fff;
    font-size: 1rem;
    font-family: inherit;
  }

  .form-input::placeholder { color: #555; }
  .form-input:focus { outline: none; }

  .form-btn {
    padding: 0.75rem 1.5rem;
    background: #5DB585;
    color: #0a0a0a;
    font-weight: 700;
    font-size: 0.95rem;
    font-family: inherit;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(93, 181, 133, 0.2);
  }

  .form-btn:hover:not(:disabled) {
    background: #6FC494;
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(93, 181, 133, 0.3);
  }

  .form-btn:disabled { opacity: 0.8; cursor: not-allowed; }

  .btn-loading { display: flex; align-items: center; justify-content: center; }
  .spinner { width: 20px; height: 20px; animation: spin 1s linear infinite; }
  @keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }

  .form-note {
    font-size: 0.75rem;
    color: #666;
    margin-top: 0.75rem;
    text-align: center;
  }

  /* Download state */
  .download-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    width: 100%;
    padding: 1rem;
    background: #5DB585;
    color: #0a0a0a;
    font-weight: 700;
    font-size: 1rem;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.25s;
    box-shadow: 0 0 25px rgba(93, 181, 133, 0.2);
  }

  .download-btn:hover {
    background: #6FC494;
    transform: translateY(-2px);
    box-shadow: 0 5px 35px rgba(93, 181, 133, 0.3);
  }

  .download-note {
    font-size: 0.75rem;
    color: #666;
    margin-top: 0.75rem;
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 480px) {
    .modal-content {
      padding: 1.75rem 1.25rem;
    }

    .modal-header {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .modal-cover img {
      width: 80px;
    }

    .modal-title {
      align-items: center;
    }

    .modal-title h2 {
      font-size: 1.25rem;
    }

    form {
      flex-direction: column;
    }

    .form-btn { width: 100%; }
  }
</style>
