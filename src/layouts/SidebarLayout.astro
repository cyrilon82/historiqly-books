---
interface Props {
  title: string;
  description?: string;
  currentVolume?: number;
}

const { title, description = "AI Casefiles - Evidence-based investigations", currentVolume } = Astro.props;

const volumes = [
  { num: 1, title: "Hoaxes, Forgeries & Frauds", slug: "hoaxes", available: true },
  { num: 2, title: "Historical Myths Debunked", slug: "myths", available: false },
  { num: 3, title: "Cold Cases Reopened", slug: "cold-cases", available: false },
  { num: 4, title: "Famous Disappearances", slug: "disappearances", available: false },
  { num: 5, title: "Conspiracy Claims", slug: "conspiracies", available: false },
  { num: 6, title: "Secret Societies", slug: "secret-societies", available: false },
  { num: 7, title: "Declassified Dossiers", slug: "declassified", available: false },
  { num: 8, title: "Unexplained Phenomena", slug: "unexplained", available: false },
  { num: 9, title: "Lost Civilizations", slug: "lost-civilizations", available: false },
  { num: 10, title: "Archaeological Mysteries", slug: "archaeological", available: false },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | AI Casefiles</title>
  </head>
  <body>
    <!-- Top Bar -->
    <header class="top-bar">
      <div class="top-bar-content">
        <a href="/historiqly-books/" class="logo">
          <span class="logo-icon">üìÅ</span>
          <span class="logo-text">AI Casefiles</span>
        </a>
        <nav class="top-nav">
          <a href="/historiqly-books/" class="nav-link">Home</a>
          <a href="/historiqly-books/vol/hoaxes" class="btn-primary-sm">Get Vol 1 ‚Üí</a>
        </nav>
        <button class="mobile-menu-btn" id="menuBtn" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </header>

    <div class="layout">
      <!-- Sidebar -->
      <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
          <span class="sidebar-title">Volumes</span>
        </div>
        <nav class="sidebar-nav">
          {volumes.map((vol) => (
            <a 
              href={`/historiqly-books/vol/${vol.slug}`} 
              class:list={["sidebar-link", { active: currentVolume === vol.num, unavailable: !vol.available }]}
            >
              <span class="vol-num">{vol.num}</span>
              <span class="vol-title">{vol.title}</span>
              {!vol.available && <span class="coming-soon">Soon</span>}
              {vol.available && <span class="available-badge">Available</span>}
            </a>
          ))}
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <slot />
      </main>
    </div>

    <script>
      const menuBtn = document.getElementById('menuBtn');
      const sidebar = document.getElementById('sidebar');
      
      menuBtn?.addEventListener('click', () => {
        sidebar?.classList.toggle('open');
        menuBtn?.classList.toggle('open');
      });
    </script>
  </body>
</html>

<style>
  :root {
    --primary: #5DB585;
    --primary-hover: #6FC494;
    --primary-dim: rgba(93, 181, 133, 0.08);
    --background: #0a0a0a;
    --surface: #111111;
    --surface-elevated: #161616;
    --foreground: #FAFAFA;
    --foreground-muted: #a8a8a8;
    --border: rgba(255, 255, 255, 0.08);
    --border-strong: rgba(255, 255, 255, 0.12);
    --sidebar-width: 280px;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html, body {
    height: 100%;
  }

  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: var(--background);
    color: var(--foreground);
    line-height: 1.6;
  }

  /* Top Bar */
  .top-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 64px;
    background: var(--surface);
    border-bottom: 1px solid var(--border);
    z-index: 100;
  }

  .top-bar-content {
    max-width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1.5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--foreground);
    font-weight: 700;
    font-size: 1.125rem;
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .top-nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-link {
    color: var(--foreground-muted);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--foreground);
  }

  .btn-primary-sm {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background: var(--primary);
    color: var(--background);
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary-sm:hover {
    background: var(--primary-hover);
    transform: translateY(-1px);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 32px;
    height: 32px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }

  .mobile-menu-btn span {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--foreground);
    transition: all 0.3s;
  }

  .mobile-menu-btn.open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-btn.open span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.open span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Layout */
  .layout {
    display: flex;
    padding-top: 64px;
    min-height: 100vh;
  }

  /* Sidebar */
  .sidebar {
    position: fixed;
    top: 64px;
    left: 0;
    bottom: 0;
    width: var(--sidebar-width);
    background: var(--surface);
    border-right: 1px solid var(--border);
    overflow-y: auto;
    z-index: 50;
  }

  .sidebar-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .sidebar-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--foreground-muted);
  }

  .sidebar-nav {
    padding: 0.75rem;
  }

  .sidebar-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    color: var(--foreground-muted);
    font-size: 0.9375rem;
    transition: all 0.2s;
    margin-bottom: 0.25rem;
  }

  .sidebar-link:hover {
    background: var(--surface-elevated);
    color: var(--foreground);
  }

  .sidebar-link.active {
    background: var(--primary-dim);
    color: var(--primary);
  }

  .sidebar-link.unavailable {
    opacity: 0.6;
  }

  .vol-num {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: var(--surface-elevated);
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    flex-shrink: 0;
  }

  .sidebar-link.active .vol-num {
    background: var(--primary);
    color: var(--background);
  }

  .vol-title {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .coming-soon {
    font-size: 0.625rem;
    padding: 0.125rem 0.375rem;
    background: var(--surface-elevated);
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--foreground-muted);
  }

  .available-badge {
    font-size: 0.625rem;
    padding: 0.125rem 0.375rem;
    background: var(--primary-dim);
    color: var(--primary);
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Main Content */
  .main-content {
    flex: 1;
    margin-left: var(--sidebar-width);
    padding: 2rem;
    min-height: calc(100vh - 64px);
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .top-nav {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .sidebar {
      transform: translateX(-100%);
      transition: transform 0.3s ease;
    }

    .sidebar.open {
      transform: translateX(0);
    }

    .main-content {
      margin-left: 0;
    }
  }
</style>
